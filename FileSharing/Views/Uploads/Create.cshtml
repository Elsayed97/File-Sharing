@inject IViewLocalizer localizer
@model FileSharing.Models.InputFile

@{
    ViewData["Title"] = @localizer["Title"];
}




<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-goup">
               <div class="mb-3">
                  <label asp-for="File" class="form-label">@localizer["ChooseFileLabel"]</label>
                  <input class="form-control" type="file" asp-for="File" id="formFile">
               </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer["Uploadbtn"]" class="btn btn-outline-primary" /> 
                || <a asp-action="Index" class="btn btn-outline-primary">@localizer["MyUploads"]</a>
            </div>
        </form>
    </div>

   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
